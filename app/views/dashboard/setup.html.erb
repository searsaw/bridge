<div class="setup-callout">

  <h1>Tell us about your current or last employer.</h1>

</div>

<div class="row setup-sliders">

  <div class="col-md-6 col-md-offset-3">

    <%= form_tag dashboard_setup_path, method: :post do %>

        <% @profiles.each_with_index do |p, i| %>

            <div class="slider">

              <h2>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas eu quam imperdiet, posuere ipsum sit amet, malesuada lectus.</h2>

              <div class="col-md-6">
                <h3><%= p.question.bottom %></h3>
              </div>

              <div class="col-md-6">
                <h3><span class="pull-right"><%= p.question.top %></span></h3>
              </div>

              <%= range_field_tag "profile#{i}[rank]", in: 0..99 %>

              <div class="col-md-6">
                <h3>Unimportant</h3>
              </div>

              <div class="col-md-6">
                <h3><span class="pull-right">Important</span></h3>
              </div>

              <%= range_field_tag "profile#{i}[importance]", in: 0..99 %>

              <%= hidden_field_tag "profile#{i}[question_id]", p.question.id %>

            </div>

        <% end %>

        <%= submit_tag 'Submit' %>

    <% end %>

  </div>

</div>